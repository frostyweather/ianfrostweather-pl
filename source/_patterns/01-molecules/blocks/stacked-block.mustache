<div class="c-stacked-block {{ styleModifier }}">

	<div class="c-stacked-block__header">
		<div class="c-stacked-block__media">
			{{# stackedBlockLink }}
			<a href="{{ url }}" class="c-stacked-block__media-link">
			{{/ stackedBlockLink }}
				{{> atoms-landscape:c-stacked-block__img }}
			{{# stackedBlockLink }}
			</a>
			{{/ stackedBlockLink }}
		</div>
	</div>

	<div class="c-stacked-block__body">
		<div class="c-stacked-block__body-top">
			{{# stackedBlockLink }}
			<a href="{{ url }}" class="c-stacked-block__title-link">
			{{/ stackedBlockLink }}
				<h2 class="c-stacked-block__title">{{ title }}</h2>
			{{# stackedBlockLink }}
			</a>
			{{/ stackedBlockLink }}
			{{# description }}
			<p class="c-stacked-block__desc c-text-passage">{{ description }}</p>
			{{/ description }}
		</div>
		{{# stackedBlockLinkList }}
		<div class="c-stacked-block__body-bottom">
			{{# linkListHeading }}
			<h3 class="c-stacked-block__list-heading">{{ linkListHeading }}</h3>
			{{/ linkListHeading }}
			{{> molecules-link-list }}
		</div>
		{{/ stackedBlockLinkList }}

	</div><!-- end c-stacked-block__body -->

	{{# stackedBlockFooter }}
	<div class="c-stacked-block__footer">
		<p class="c-stacked-block__meta">{{ label }}</p>
	</div>
	{{/ stackedBlockFooter }}
</div><!-- end c-stacked-block -->
